@model Supporter.Entity.Cozum

@{
    ViewBag.Title = "Edit";
}

<h2  data-aos="zoom-in-left">Çözümü Düzenle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" data-aos="zoom-in">
        <h4>Cozum</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CozumYazi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CozumYazi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CozumYazi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-default hvr-grow" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Çözümleri Listele", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
