@model Supporter.Entity.Calisan

@{
    ViewBag.Title = "Create";
}

<h2>Yeni Çlışan Ekle</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" data-aos="zoom-in">
        <h4  data-aos="zoom-in-left">Çalışan</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CalisanAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CalisanAd, new { htmlAttributes = new { @class = "form-control hvr-grow" } })
                @Html.ValidationMessageFor(model => model.CalisanAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CalisanTel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CalisanTel, new { htmlAttributes = new { @class = "form-control hvr-grow" } })
                @Html.ValidationMessageFor(model => model.CalisanTel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-default hvr-grow" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listele", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
