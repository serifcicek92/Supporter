<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yazılım Destek</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/hover-min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <style>
        .container {
            max-width: 95% !important;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Yazılım Destek", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*@if (User.Identity.IsAuthenticated)
        {*@
                    @if (Session["Kullanici"] != null)
                    {


                        <li>@Html.ActionLink("Ana Sayfa", "Index", "Home", "", new { @class = "nav-item" })</li>
                        <li>@Html.ActionLink("Ana Ürünler", "Index", "AnaUruns", "", new { @class = "nav-item" })</li>
                        <li>@Html.ActionLink("Modüller", "Index", "Moduls", "", new { @class = "nav-item" })</li>
                        <li>@Html.ActionLink("Versiyonlar", "Index", "Versiyons", "", new { @class = "nav-item" })</li>
                        <li>@Html.ActionLink("Problem Tipleri", "Index", "ProblemTipi", "", new { @class = "nav-item" })</li>
                        <li>@Html.ActionLink("Depolar", "Index", "IlacDepolari", "", new { @class = "nav-item" })</li>

                    }

                    @*}*@
                </ul>
                <ul class="nav navbar-nav" style="float:right;">
                    @if (UserHelper.Rol == 1)
                    {
                        <li>
                            @Html.ActionLink("Kullanıcı İşlemleri", "Index", "Kullanicilar", new { area = "" }, new { @class = "nav-item" })
                        </li>
                    }
                    @if (Session["Kullanici"] != null)
                    {
                        <li>
                            @Html.ActionLink("Çıkış Yap", "Cikis", "Kullanicilar", new { area = "" }, new { @class = "nav-item" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Boyut Bilgisayar Hizmetleri - Destek Uygulaması</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

</body>
</html>